<div class="row">
  <div class="col-sm-10 col-sm-offset-1 event">
    <h2>ติดต่อเรา</h2>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="col-sm-12" id="map" style='height: 380px;'></div>
    <div class="col-sm-12 contact">
      <center> <h3>เทศบาลตำบลปากน้ำ</h3> </center>
      <p><%= fa_icon "building-o" %> หมู่ที่ 1 ตำบลปากน้ำ อำเภอเดิมบางนางบวช จังหวัดสุพรรณบุรี 72120</p>
      <p><%= fa_icon "phone" %> 0-3557-1067
      <%= fa_icon "envelope-o", class: "l" %> 0-3557-1067 </p>
    </div>
  </div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
    handler.buildMap({ provider: {
      scrollwheel: false,
      mapTypeId: google.maps.MapTypeId.HYBRID
    },
    internal: {id: 'map'}}, function(){
      markers = handler.addMarkers([
        {
          "lat": 14.936741,
          "lng": 100.080865,
          "picture": {
          "url": "http://s29.postimg.org/ra6no13hf/pin_green_solid_15.png",
          "width":  34,
          "height": 49
        },
        "infowindow": "หมู่ที่ 1 ตำบล ปากน้ำ อำเภอ เดิมบางนางบวช จังหวัด สุพรรณบุรี 72120"
      }
    ]);

    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(15);
  });
</script>